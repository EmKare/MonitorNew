import tkinter as tk
import tkintermapview

root = tk.Tk()
map_widget = tkintermapview.TkinterMapView(root, width=800, height=600)
map_widget.pack()

# Set the initial map position
map_widget.set_position(40.7128, -74.0060)  # New York City

# Create a Canvas to add text
canvas = tk.Canvas(map_widget, bg="transparent")
canvas.pack()

# Add text to the Canvas
text_id = canvas.create_text(10, 10, anchor="nw", text="Hello, TkinterMapView!", fill="red")

root.mainloop()